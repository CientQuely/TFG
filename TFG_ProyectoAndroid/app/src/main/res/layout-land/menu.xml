<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/const_menu_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/menu_background"
    android:minHeight="0dp"
    android:minWidth="0dp"
    tools:context="tfg.project.ProjectView">


    <LinearLayout
        android:id="@+id/vertical_menu_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="139dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            android:src="@drawable/menu_title" />

        <ImageButton
            android:id="@+id/bt_start"
            android:layout_width="161dp"
            android:layout_height="62dp"
            android:layout_gravity="center"
            android:layout_marginTop="85dp"

            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:cropToPadding="false"
            android:fadeScrollbars="false"
            android:onClick="onStartClick"
            android:scaleType="centerCrop"
            android:src="@drawable/bt_start"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_creatorCredentials"
            android:layout_width="match_parent"

            android:layout_height="50dp"
            android:layout_marginTop="0dp"
            android:gravity="bottom"
            android:text="Creador: Miquel Ã€ngel Ramis Llompart - Proyecto de Final de Grado"

            android:textAppearance="@style/TextAppearance.AppCompat.Inverse"

            />


    </LinearLayout>
</android.support.constraint.ConstraintLayout>
